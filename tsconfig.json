{
  "compilerOptions": {
    "target": "es2017",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["src/routes/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@routes/*": ["src/routes/*"],
      }
    }
  },
  "exclude": ["node_modules"]
}